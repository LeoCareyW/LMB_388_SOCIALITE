<div class="users-title">
  <div class="w-25">
    <h3 class="messages-title">Find your friends... </h3>
      <%= simple_form_for :search, url: users_path, method: :get do |f| %>
      <div class="search-form-control form-group">
      <input class="form-control string required" type="text" name="search[query]" id="search_query" />
        <div style="align-items: center;">
        <button name="button" type="submit" class="btn btn-flat" id="search-btn">
        <i class="fas fa-search" id="search"></i> Search
        </button>
        </div>
    </div>
    <% end %>
  </div>


    <div id="users">
      <% @users.each do |user| %>
        <div class="user row align-items-center mr-2 mb-2" id="user">
          <div class="col">
          <% if user.photo.attached? %>
          <%= cl_image_tag user.photo.key %>
          <% else %>
          <%= cl_image_tag("u7dlw0t2qwoy93ogrpd3q6ir8soj") %>
          <% end %>
          <span><strong><%= user.name %></strong></span>
          </div>
          <div class="col-auto">
          <%= link_to  "+" , friendships_path(friend_id: user), method: :post, remote: true, class: "btn add-user-btn btn-sm"  %>
          </div>    
      </div>
      <% end %>
    </div>
</div>

