<div class="header-container">
  <div>
    <%= cl_image_tag("bo77jp8r7432zubtupaup2uprps9", width: 150, height: 150, crop: :thumb, gravity: :face) %>
    </div>
    <br>
  <h4><%= current_user.name %></h4>
 </div>


  <% @recommendations.each do |recommendation| %>
  <% id = recommendation.place_id %>
  <p><%= Place.find(id).name %></p>
  <% end  %>

<div class="container">
  <h2>Friends</h2>
  <ul>
    <% @user.friendships.each do |friendship| %>
      <li>
        <%= friendship.friend.email %>
        (<%= link_to "remove", friendship, :method => :delete %>)
      </li>
    <% end %>
  </ul>

  <p><%= link_to "Find Friends", users_path %></p>
</div>


<div class="container">
  <h2>My Plans</h2>
  <div class="row">
  <% @user.plans.each do |plan| %>
    <div class="col-sm">
      <div class="container">
        <div class="card-trip">
          <img src="https://raw.githubusercontent.com/lewagon/fullstack-images/master/uikit/greece.jpg" />
          <div class="card-trip-infos">
            <div>
              <h2><%= plan.place.name %></h2>
            </div>
            <h2 class="card-trip-pricing"><%= plan.date %></h2>
          </div>
        </div>
      </div>
    </div>
    <% end %>
  </div>
</div>


