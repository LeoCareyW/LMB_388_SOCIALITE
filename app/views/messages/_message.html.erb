<div class="message-container">
        <i class="author">
        <div class="sender-container">
          <% if message.user.photo.attached? %>
          <div class="message-avatar"> <%= cl_image_tag message.user.photo.key %> </div>
          <% else %>
          <div class="message-avatar"> <%= cl_image_tag("u7dlw0t2qwoy93ogrpd3q6ir8soj") %> </div>
          <% end %>
        <div class="mn-container">
          <span><%= message.user.name %></span>
          <small><%= message.created_at.strftime("%H:%M") %></small>
        </div>
         </div>
        </i>
        <p><%= message.content %></p>
      </div>



