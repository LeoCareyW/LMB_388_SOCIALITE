<section>
  <div class="places-index">
    <div class="places-form">
        <%= simple_form_for :search, url: places_path, method: :get do |f| %>
          <div class="search-form-control form-group">
          <input class="form-control string required" type="text" name="search[query]" id="search_query" />
          <button name="button" type="submit" class="btn btn-flat" id="search-btn">
          <i class="fas fa-search" id="search"></i> Search
          </button>
        <% end %>
      </div>
    </div>


    <div id="map"
        style="height: 450px;"
        data-markers="<%= @markers.to_json %>"
        data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">
    </div>
 
  <div class="container">
      <div class="row">
        <% @places.each do |place| %> 
          <div class="col-sm">
            <div class="card-product">
              <div class="card-product-infos">
                  <h2><%= link_to "#{place.name}", place_path(place)%></h2>
                  <p><%= place.address %></p>
                  <p><%= place.category %></p>
              </div>
            </div>
          </div>
        <% end %>  

<div id="map"
     style="width: 100%; height: 600px;"
     data-markers="<%= @markers.to_json %>"
     data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">
</div>

  <div class="places-card">
    <% @places.each do |place| %>
      <%= link_to "#{place.name}", place_path(place)%>
      <%= place.address %>
      <%= place.category %>
    <% end %>
  </div>

<%= link_to "Add a new place", new_place_path %>

</div>
</section>

  
    