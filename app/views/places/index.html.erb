
<div class="title-container">
  <h1>Socialite</h1>
  <h3>Discover places for you</h3>
</div>

  <div class="places-index">
    <div class="places-form">
        <%= simple_form_for :search, url: places_path, method: :get do |f| %>
          <div class="search-form-control form-group">
          <input class="form-control string required" type="text" name="search[query]" id="search_query" />
          <button name="button" type="submit" class="btn btn-flat" id="search-btn">
          <i class="fas fa-search" id="search"></i> Search
          </button>
        <% end %>
      </div>
    </div>

    <div id="map"
        style="height: 450px;"
        data-markers="<%= @markers.to_json %>"
        data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">
    </div>

    <hr class="horizontal-line my-4" size="30" width="75%">

    <div class="subtitle-container">
      <h2>Showing <%= @places.count %> Places Near You</h2>
      <div class="messages-buttons">
        <div class="button-container">
          <p class="profile-buttons" id="pbtn1"><%= link_to "TAGS", places_path %></p>
          <p class="profile-buttons" id="pbtn2"><%= link_to "TAGS", places_path %></p>
          <p class="profile-buttons" id="pbtn3"><%= link_to "TAGS", places_path %></p>
        </div>
      </div>
    </div>

    <div class="slick-wrapper">
      <div id="slick1">
        <% @places.each do |place| %>
          <div class="slide-item">
            <div class="a-card">
              <%= cl_image_tag place.photos[0].key, class: "card-img" %>
              <div class="a-card-text">
                <h3><%= link_to "#{place.name}", place_path(place) %></h3>
                <p><%= place.address %></p>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    </div>

  <div class="add-btn">
  <%= link_to "Add a new place", new_place_path %>
  </div>
</div>

<div class="map-index" id="map"
   style= "height: 600px; width: 50%;"
   data-markers="<%= @markers.to_json %>"
   data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">
</div>







