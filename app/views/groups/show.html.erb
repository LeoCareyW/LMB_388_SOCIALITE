
<div class="container mx-auto mt-4" style="width:300px; text-align: center">
  <h1><%= @group.name %></h1>
</div>

<div class="container">
  <div class="row">
    <div class="col-sm-3">
      <% if @users.nil? %>
      <p>No members yet</p>
      <% else %>
      <% @users.each do |user| %>
      <%= user.name %>
      <% end %>
      <% end %>
      <div class="container member-table">
        <div class="member-card">
          <img src="https://images.unsplash.com/photo-1531427186611-ecfd6d936c79?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=634&q=80" />
          <div class="member-card-infos">
            <h2>Bradley</h2>
          </div>
        </div>
      </div>
      <div class="container member-table">
        <div class="member-card">
          <img src="https://images.unsplash.com/photo-1584999734482-0361aecad844?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=1600&q=80" />
          <div class="member-card-infos">
            <h2>Mikey</h2>
          </div>
        </div>
      </div>
    </div>
    <div class="col-sm-6" style="text-align: center">
      <h2>Upcoming Plans</h2>
      <% @plans.each do |plan| %>
      <%= plan.name %>
      <% end %>
    </div>
    <div class="col-sm-3">
      CALENDAR
    </div>
  </div>
</div>
